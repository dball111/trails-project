extends ../layout

block content
  h1 #{title}

  div#transbox
      for places in result
            p
            label(for="location") Location:
            p#result #{places.city}, #{places.state}
            label(for="name") Name:
            p#result #{places.name}
            label(for="directions") Directions:
            p#result #{places.directions}
            label(for="lat") Latitude/Longitude:
            p#result #{places.lat}, #{places.lon}
            p
            hr
      h2 Instagrams in this area:
          for posts in social
            h4
              p
              img#pictures(src= '#{posts.image_url}' )
              p
              p#describe #{posts.description}
          
        
